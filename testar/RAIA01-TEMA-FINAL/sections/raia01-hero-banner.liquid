{% comment %}
  RAIA 01 - Hero Banner Section
  Seção customizada para banner principal com slider
{% endcomment %}

<section class="raia01-hero-banner" style="margin-bottom: var(--spacing-sections-desktop);">
  {% if section.settings.enable_slider %}
    {%- comment -%} SLIDER DE BANNERS {%- endcomment -%}
    <div class="banner-slider">
      <div class="swiper-container hero-swiper">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="swiper-slide" {{ block.shopify_attributes }}>
              <div class="home-banner" style="background: linear-gradient(135deg, rgba(123, 63, 157, 0.7), rgba(233, 30, 99, 0.7)), url('{{ block.settings.image | img_url: '2048x' }}') center/cover no-repeat; min-height: {{ section.settings.banner_height }}px;">
                <div class="home-banner-content container page-width">
                  {% if block.settings.title != blank %}
                    <h1 class="fade-in-up" style="color: #FFFFFF;">{{ block.settings.title }}</h1>
                  {% endif %}
                  {% if block.settings.subtitle != blank %}
                    <p class="fade-in-up" style="color: #FFFFFF;">{{ block.settings.subtitle }}</p>
                  {% endif %}
                  {% if block.settings.button_text != blank %}
                    <div class="banner-buttons">
                      <a href="{{ block.settings.button_link }}" class="btn-primary">{{ block.settings.button_text }}</a>
                      {% if block.settings.button_text_2 != blank %}
                        <a href="{{ block.settings.button_link_2 }}" class="btn-secondary">{{ block.settings.button_text_2 }}</a>
                      {% endif %}
                    </div>
                  {% endif %}
                </div>
              </div>
            </div>
          {% endfor %}
        </div>

        {%- comment -%} Controles do Slider {%- endcomment -%}
        <div class="swiper-pagination"></div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
      </div>
    </div>

    {%- comment -%} Swiper.js Library {%- endcomment -%}
    <link rel="stylesheet" href="https://unpkg.com/swiper@8/swiper-bundle.min.css">
    <script src="https://unpkg.com/swiper@8/swiper-bundle.min.js"></script>
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        new Swiper('.hero-swiper', {
          loop: true,
          autoplay: {
            delay: {{ section.settings.slider_speed | times: 1000 }},
            disableOnInteraction: false,
          },
          pagination: {
            el: '.swiper-pagination',
            clickable: true,
          },
          navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev',
          },
          effect: 'fade',
          fadeEffect: {
            crossFade: true
          },
          speed: 800,
        });
      });
    </script>

  {% else %}
    {%- comment -%} BANNER ÚNICO {%- endcomment -%}
    {% assign first_block = section.blocks | first %}
    <div class="home-banner" style="background: linear-gradient(135deg, rgba(123, 63, 157, 0.7), rgba(233, 30, 99, 0.7)), url('{{ first_block.settings.image | img_url: '2048x' }}') center/cover no-repeat; min-height: {{ section.settings.banner_height }}px;">
      <div class="home-banner-content container page-width">
        {% if first_block.settings.title != blank %}
          <h1 class="fade-in-up" style="color: #FFFFFF;">{{ first_block.settings.title }}</h1>
        {% endif %}
        {% if first_block.settings.subtitle != blank %}
          <p class="fade-in-up" style="color: #FFFFFF;">{{ first_block.settings.subtitle }}</p>
        {% endif %}
        {% if first_block.settings.button_text != blank %}
          <div class="banner-buttons">
            <a href="{{ first_block.settings.button_link }}" class="btn-primary">{{ first_block.settings.button_text }}</a>
            {% if first_block.settings.button_text_2 != blank %}
              <a href="{{ first_block.settings.button_link_2 }}" class="btn-secondary">{{ first_block.settings.button_text_2 }}</a>
            {% endif %}
          </div>
        {% endif %}
      </div>
    </div>
  {% endif %}
</section>

<style>
  .banner-buttons {
    display: flex;
    gap: 20px;
    justify-content: center;
    flex-wrap: wrap;
    margin-top: 30px;
  }

  .banner-slider {
    position: relative;
    overflow: hidden;
  }

  .hero-swiper {
    width: 100%;
    height: auto;
  }

  .swiper-slide {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .swiper-button-prev,
  .swiper-button-next {
    color: #FFFFFF;
    background: rgba(123, 63, 157, 0.7);
    width: 50px;
    height: 50px;
    border-radius: 50%;
  }

  .swiper-button-prev:after,
  .swiper-button-next:after {
    font-size: 20px;
  }

  .swiper-button-prev:hover,
  .swiper-button-next:hover {
    background: rgba(123, 63, 157, 0.9);
  }

  .swiper-pagination-bullet {
    width: 12px;
    height: 12px;
    background: #FFFFFF;
    opacity: 0.7;
  }

  .swiper-pagination-bullet-active {
    opacity: 1;
    background: var(--raia-pink);
  }

  @media (max-width: 768px) {
    .banner-buttons {
      flex-direction: column;
      align-items: center;
    }

    .banner-buttons a {
      width: 80%;
      text-align: center;
    }
  }
</style>

{% schema %}
{
  "name": "Raia 01 - Hero Banner",
  "tag": "section",
  "class": "section-raia01-hero",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_slider",
      "label": "Ativar Slider",
      "default": true,
      "info": "Ative para exibir múltiplos banners em slider"
    },
    {
      "type": "range",
      "id": "banner_height",
      "min": 400,
      "max": 800,
      "step": 50,
      "unit": "px",
      "label": "Altura do Banner",
      "default": 600
    },
    {
      "type": "range",
      "id": "slider_speed",
      "min": 3,
      "max": 10,
      "step": 1,
      "unit": "s",
      "label": "Velocidade do Slider",
      "default": 5,
      "info": "Tempo em segundos entre cada slide"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Banner Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Imagem de Fundo"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Título",
          "default": "Vista-se para Vencer"
        },
        {
          "type": "textarea",
          "id": "subtitle",
          "label": "Subtítulo",
          "default": "Moda fitness de alta performance"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Texto do Botão Principal",
          "default": "Ver Coleção"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Link do Botão Principal"
        },
        {
          "type": "text",
          "id": "button_text_2",
          "label": "Texto do Botão Secundário",
          "default": "Novidades"
        },
        {
          "type": "url",
          "id": "button_link_2",
          "label": "Link do Botão Secundário"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Raia 01 - Hero Banner",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}
