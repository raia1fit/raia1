{% comment %}
  RAIA 01 - Newsletter Section
  Se√ß√£o customizada para captura de emails
{% endcomment %}

<section class="newsletter-section raia01-newsletter">
  <div class="container page-width">
    <div style="text-align: center;">
      {% if section.settings.icon != blank %}
        <div style="font-size: 3rem; margin-bottom: 20px;">{{ section.settings.icon }}</div>
      {% endif %}

      {% if section.settings.title != blank %}
        <h3 style="color: #FFFFFF; font-size: 2rem; margin-bottom: 15px;">{{ section.settings.title }}</h3>
      {% endif %}

      {% if section.settings.subtitle != blank %}
        <p style="color: rgba(255,255,255,0.9); margin-bottom: 30px; font-size: 1.1rem;">{{ section.settings.subtitle }}</p>
      {% endif %}

      {%- comment -%} Formul√°rio de Newsletter {%- endcomment -%}
      {% form 'customer', class: 'newsletter-form' %}
        {% if form.posted_successfully? %}
          <div class="newsletter-success" style="color: #FFFFFF; padding: 20px; background: rgba(255,255,255,0.2); border-radius: 10px; margin-bottom: 20px;">
            ‚úì Obrigado! Voc√™ est√° inscrito em nossa newsletter.
          </div>
        {% endif %}

        {% if form.errors %}
          <div class="newsletter-error" style="color: #FFFFFF; padding: 20px; background: rgba(255,0,0,0.3); border-radius: 10px; margin-bottom: 20px;">
            {{ form.errors | default_errors }}
          </div>
        {% endif %}

        <div style="display: flex; justify-content: center; gap: 15px; flex-wrap: wrap; max-width: 600px; margin: 0 auto;">
          <input
            type="email"
            name="contact[email]"
            class="newsletter-input"
            placeholder="{{ section.settings.placeholder }}"
            required
            style="flex: 1; min-width: 250px; padding: 15px 25px; border-radius: 50px; border: none; font-size: 16px;"
          >
          <button
            type="submit"
            class="newsletter-button"
            style="background: #FFFFFF; color: var(--raia-purple); padding: 15px 40px; border-radius: 50px; border: none; font-weight: 600; cursor: pointer; transition: all 0.3s ease;"
          >
            {{ section.settings.button_text }}
          </button>
        </div>

        {% if section.settings.show_disclaimer %}
          <p style="font-size: 12px; color: rgba(255,255,255,0.8); margin-top: 15px;">
            {{ section.settings.disclaimer_text }}
          </p>
        {% endif %}
      {% endform %}
    </div>
  </div>
</section>

<style>
  .raia01-newsletter {
    background: linear-gradient(135deg, #7B3F9D, #E91E63);
    padding: 60px 20px;
    border-radius: 20px;
    margin: 80px auto;
    max-width: var(--page-width);
  }

  .newsletter-button:hover {
    transform: scale(1.05);
    box-shadow: 0 5px 20px rgba(255,255,255,0.3);
  }

  .newsletter-input:focus {
    outline: none;
    box-shadow: 0 0 0 3px rgba(255,255,255,0.3);
  }

  @media (max-width: 768px) {
    .newsletter-form > div {
      flex-direction: column;
    }

    .newsletter-input {
      min-width: 100% !important;
    }

    .newsletter-button {
      width: 100%;
    }

    .raia01-newsletter {
      margin: 40px 20px;
      border-radius: 15px;
    }
  }
</style>

